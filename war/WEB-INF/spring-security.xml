<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:security="http://www.springframework.org/schema/security"    
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans 
    	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd                
        http://www.springframework.org/schema/security 
        http://www.springframework.org/schema/security/spring-security-3.2.xsd">
	
	<!-- Habilitamos las anotaciones de spring security -->
	<global-method-security secured-annotations="enabled" pre-post-annotations="enabled" />
	
	<!-- Stateless RESTful services use BASIC authentication -->
    <http entry-point-ref="appEngineEntryPoint" >
    </http>
 
 	<beans:bean id="appEngineEntryPoint" class="com.vfg.appengineblank.commons.security.AppEngineEntryPoint" />
 	
    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="vfg" password="123abc" authorities="ROLE_REST"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>
 
</beans:beans>